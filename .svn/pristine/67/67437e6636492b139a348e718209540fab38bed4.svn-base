		AND     CODE IN ('01','02')
	</select>
	
	<update id="modAs" parameterType="brbMap">
	    UPDATE TB_AS_REQ
	       SET STAT          = #{stat},
	       <if test='stat == "02"'>
	           REP_CPL_COMMENT = #{rep_cpl_comment},
	           REP_CPL_DTTM = now(),
	       </if>
	       <if test='stat == "03"'>
	           CPL_COMMENT = #{cpl_comment},
	           CPL_DTTM = now(),
	       </if>
	       <if test='stat == "04"'>
	           SHIP_COMMENT = #{ship_comment},
	           SHIP_DTTM = now(),
	       </if>
	       <if test='stat == "05"'>
	           SHIP_CLP_COMMENT = #{ship_clp_comment},
	           SHIP_CPL_DTTM = now(),
	       </if>
	           UPT_DTTM      = now(),
	           UPT_ADM_SQ    = #{upt_adm_sq}
	     WHERE AS_REQ_SQ     = #{as_req_sq} 
	</update>
</mapper>