				<when test="category == 'as_req_email'">AND EXISTS (SELECT 0 FROM TB_MEM WHERE MEM_SQ = A.AS_REQ_MEM_SQ AND MEM_EMAIL = #{keyword})</when>
				<when test="category == 'as_req_cp_nm'">AND A.AS_REP_CP_NM LIKE CONCAT('%', #{keyword}, '%')</when>
