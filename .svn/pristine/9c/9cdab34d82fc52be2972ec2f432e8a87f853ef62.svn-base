/* 레이어팝업 */
#dim-layer{
	position: absolute;
	top: 0;
	left: 0;
	width:100%;
	height:200%;
	background-color: #000;
	opacity: 0.3;
	display: none;
}
#layerPopup{
	position: absolute;
	left: 40%;
	top: 40%;
	width: 220px;
	height: 100px;
	background-color: white;
	border:1px solid #757a88;
	padding: 5px;
	display: none;
}
.on{
	background-color: #757a88;
	color: white;
	border: 1px solid #d1d1d1;
}