		grid.fn_SearchGrid();
	});

	$("#prodBtn").click(function() {
		if(document.getElementById("mini2").checked == true){
			$("#dim-layer").show();
			$("#layerPopup2").show();
			grid2.fn_initLoadGrid();
			grid2.fn_SearchGrid();
		}else{
			alert("미니제품만 마스터 기기 등록이 가능합니다.");
		}
	});

	$("#rmany").click(function(){
		$("#one").hide();
		$("#many").show();
	});

	$("#rone").click(function(){
		$("#many").hide();
		$("#one").show();
	});

	$("#close").click(function() {
		$("#dim-layer").hide();
		$("#layerPopup2").hide();
	});

	$("#close2").click(function() {
		$("#dim-layer").hide();
		$("#layerPopup4").hide();
