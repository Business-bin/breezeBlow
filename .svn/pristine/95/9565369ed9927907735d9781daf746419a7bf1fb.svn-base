function pouup(id){
	var popupX = (window.screen.width / 2) - (800 / 2);
	var popupY= (window.screen.height /2) - (800 / 2);
	window.open('', 'smsDetPop', 'status=no, height=800, width=800, left='+ popupX + ', top='+ popupY + ', screenX='+ popupX + ', screenY= '+ popupY);
	$('#R_SMS_SQ').val(id);
	$("#poupform").submit();
}

