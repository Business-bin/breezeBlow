function addBtb(){
		
	var phone_no = $('#phone_1').val()+$('#phone_2').val()+$('#phone_3').val();

	if($('#btbs_nm').val()==''){
		alert('B2B고객명을 입력하세요.');
		$('#btbs_nm').focus();
	}else if ($('#comp_nm').val() == '') {
		alert('회사명을 입력하세요.');
		$('#comp_nm').focus();
	}
//	else if ($('#btbs_domain').val() == '') {
//		alert('도메인정보를 입력하세요.');
//		$('#btbs_domain').focus();
//	}else if ($('#btbs_user_num').val() == '') {
//		alert('보유 회원수를 입력하세요.');
//		$('#btbs_user_num').focus();
//	}else if ($('#btbs_dev_num').val() == '') {
//		alert('보유 디바이스 개수를 입력하세요.');
//		$('#btbs_dev_num').focus();
//	}else if ($('#btbs_addr').val() == '') {
//		alert('주소를 입력하세요.');
//		$('#btbs_addr').focus();
//	}
	else if ($('#phone_2').val() == '') {
		alert('연락처를 입력하세요.');
		$('#phone_2').focus();
	}else if ($('#btbs_cur_templ').val() == '') {
		alert('템블릿 정보를 입력하세요.');
		$('#btbs_cur_templ').focus();
	}else if(confirm("저장 하시겠습니까?") == true){
		
	//	checkId();
		
		$.ajax({
			url : '/btb/btbAddProc',
			method : 'POST',
			dataType: 'JSON',
			data : {
				btbs_sq        : $('#btbs_sq').val(),
				btbs_nm        : $('#btbs_nm').val(),
				comp_nm	       : $('#comp_nm').val(),	  
				btbs_domain    : $('#btbs_domain').val(),
				btbs_user_num  : $('#btbs_user_num').val(),
				btbs_dev_num   : $('#btbs_dev_num').val(),	    
				btbs_addr 	   : $('#btbs_addr').val(),	
				phone_no	   : phone_no,		
				btbs_cur_templ : $('#btbs_cur_templ').val()                  
			},
			success : function(jsonData) {
				console.log("success");
				alert("저장 되었습니다.");
				window.location.replace("/btb/btbList");
			},
			error : function(e) {
				console.error('ajax 에러: ' + e.status);
			}
		});
		
	}else{
		return;
	}
	
}


//ID 중복체크
function checkId(){
	
	var phone_no = $('#phone_1').val()+$('#phone_2').val()+$('#phone_3').val();
	var mobile_no = $('#mobile_1').val()+$('#mobile_2').val()+$('#mobile_3').val();
	
	var val = $("#sex option:selected").val();
	$('#sex').val(val);

	if($('#user_name').val()==''){
		alert('관리자명을 입력하세요.');
		$('#user_name').focus();
	}else if ($('#user_id').val() == '') {
		alert('관리자ID를 입력하세요.');
		$('#user_id').focus();
	}else if ($('#user_pw').val() == '') {
		alert('비밀번호를 입력하세요.');
		$('#user_pw').focus();
	}else if ($('#user_email').val() == '') {
		alert('Email을 입력하세요.');
		$('#user_email').focus();
	}else if ($('#mobile_1').val() == '') {
		alert('전화번호를 입력하세요.');
		$('#mobile_1').focus();
	}else if ($('#mobile_2').val() == '') {
		alert('전화번호를 입력하세요.');
		$('#mobile_2').focus();
	}else if ($('#mobile_3').val() == '') {
		alert('전화번호를 입력하세요.');
		$('#mobile_3').focus();
	} else if(confirm("저장 하시겠습니까?") == true){
		
		checkId();
		
		$.ajax({
			url : '/admin/adminAddProc',
			method : 'POST',
			dataType: 'JSON',
			data : {
				user_name      : $('#user_name').val(),
				user_id	       : $('#user_id').val(),	  
				user_pw        : $('#user_pw').val(),
				user_email	   : $('#user_email').val(),
				sex            : $('#sex').val(),	    
				emp_no 	       : $('#emp_no').val(),	
				department	   : $('#department').val(),		
				position	   : $('#position').val(),	        
				phone_no	   : phone_no,		            
				mobile_no      : mobile_no                    
			},
			success : function(jsonData) {
				console.log("success");
				alert("저장 되었습니다.");
				window.location.replace("/admin/adminList");
			},
			error : function(e) {
				console.error('ajax 에러: ' + e.status);
			}
		});
		
	}else{
		return;
	}
	
}




