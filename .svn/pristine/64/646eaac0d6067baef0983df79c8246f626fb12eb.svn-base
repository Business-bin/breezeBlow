.wrap-loading{ /*화면 전체를 어둡게 합니다.*/
    position: absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background: rgba(0,0,0,0.2); /*not in ie */
    filter: progid:DXImageTransform.Microsoft.Gradient(startColorstr='#20000000', endColorstr='#20000000');    /* ie */
}

.wrap-loading div{ /*로딩 이미지*/
    position: absolute;
    top:50%;
    left:50%;
    margin-left: -21px;
    margin-top: -21px;
}

.display-none{ /*감추기*/
    display:none;
}

/* 레이어팝업 */
#dim-layer{
	position: absolute;
	top: 0;
	left: 0;
	width:100%;
	height:100%;
	background-color: #000;
	opacity: 0.3;
}
#layerPopup{
	position: absolute;
	left: 35%;
	top: 30%;
	width: 440px;
	height: 200px;
	background-color: white;
	border:1px solid #757a88;
	padding: 5px;
}