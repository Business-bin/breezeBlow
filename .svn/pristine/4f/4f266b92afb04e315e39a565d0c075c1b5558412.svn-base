$(function() {
	$("#startDate").datepicker({
		changeMonth : true,
		onSelect : function(dateText, inst) {
			var dateArr = dateText.split("/");
			year = dateArr[2];
			month = dateArr[0];
			day = dateArr[1];
		}
	});

	$("#endDate").datepicker({
		changeMonth : true,
		onSelect : function(dateText, inst) {
			var dateArr = dateText.split("/");
			year = dateArr[2];
			month = dateArr[0];
			day = dateArr[1];
		}
	});

	var date = new Date();
	var year = date.getFullYear();
	var month = date.getMonth() + 1;
	var day = date.getDate();
	if (month < 10) {
		month = "0" + month.toString();
	}
	$("#startDate").val(year + "-" + month + "-01");
	$("#endDate").val(year + "-" + month + "-" + day);

	$("#detMem").click(function() {
		location.href = "/mem/memDet?memSq=" + $("#memSq").val();
	});

	$("#memSearch").click(function() {
		grid.fn_SearchGrid();
	});

	$(".jqgrow").click(function() {
		var sq = $(this).id;
		alert(sq);
	});

	grid.fn_initLoadGrid();
});

function memDet(sq) {
	$("#memSq").val(sq);
	$("#gubun").val("det");
	$("#detForm").submit();
}

