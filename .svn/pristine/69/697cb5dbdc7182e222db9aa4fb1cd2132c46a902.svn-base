		$("#newProd2").show();
	});

	$("#rone").click(function(){
		$("#many").hide();
		$("#one").show();
		$("#newProd2").hide();
		$("#newProd").show();
	});

	$("#close").click(function() {
		$("#dim-layer").hide();
