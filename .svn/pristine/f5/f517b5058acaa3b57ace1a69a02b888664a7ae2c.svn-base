function fileupload(formId, url) {
	var form = $('#'+formId)[0];
    var data = new FormData(form);

    $.ajax({
        type: "POST",
        enctype: 'multipart/form-data',
        url: url,
        data: data,
        processData: false,
        contentType: false,
        cache: false,
        timeout: 600000,
        success: function (data) {
        	alert("등록되었습니다.");
        },
        error: function (e) {
            $("#result").text(e.responseText);
            console.log("ERROR : ", e);
        }
    });
}

function ajaxForm(formId, url, msg){
	var form = $("#"+formId).serialize();
	$.ajax({
		type : "POST",
		url : url,
		data : form,
		success : function(result){
			alert(msg);
		},
		error : function(e){
			alert("error : "+e);
		}
	});
}

