$(document).ready(function(){
	
	console.log("noticeView");
	var val = $('#ntc_yn1').val();
	$("select[name='ntc_yn']").val(val).attr("selected", "selected");
	
	var cont = $('#cont').val();
	$('#bd_cont').val(cont);
	
	$('#btn_mod').click(function(){
		console.log("btn_mod");
		modNotice();
	});
	$('#btn_del').click(function(){
		console.log("btn_del");
		delNotice();
	});
	
});

function modNotice(){
	
	var val = $("#ntc_yn option:selected").val();
	$('#ntc_yn').val(val);

	if($('#bd_nm').val()==''){
		alert('제목을 입력하세요.');
		$('#bd_nm').focus();
	}else if ($('#bd_cont').val() == '') {
		alert('내용을 입력하세요.');
		$('#bd_cont').focus();
	}else if(confirm("저장 하시겠습니까?") == true){
		
		$.ajax({
			url : '/board/noticeViewProc',
			method : 'POST',
			dataType: 'JSON',
			data : {
				bd_sq        : $('#bd_sq').val(),
				ntc_yn       : $('#ntc_yn').val(),
				bd_nm	     : $('#bd_nm').val(),	  
				bd_cont      : $('#bd_cont').val(), 
				bd_tp_1      : $('#bd_tp_1').val()                  
			},
			success : function(jsonData) {
				console.log("success");
				alert("저장 되었습니다.");
				window.location.replace("/board/noticeList");
			},
			error : function(e) {
				console.error('ajax 에러: ' + e.status);
			}
		});
		
	}else{
		return;
	}
	
}

